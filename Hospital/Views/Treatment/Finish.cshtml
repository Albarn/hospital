
@{
    ViewBag.Title = "Finish";
}

@using (Html.BeginForm())
{
    <div class="form-group">
        <h4>Finish Treatment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <label class="control-label col-md-2">Final Diagnosis:</label>
        <div class="col-md-10">
            <input type="text" name="FinalDiagnosis" class="form-control" />
        </div>
    </div>

    <button type="submit" class="btn btn-outline-success">Finish</button>
}
